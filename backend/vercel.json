{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/dist/**/*",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
        {"source": "/(.*)", "destination": "/"}
    ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/api/v1/auth/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/api/v1/order/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/api/v1/upload/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/dist/index.html"
    }
  ]
}
